# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database
DB_PATH=./calibration.db

# JWT Secret (Change this to a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-2024

# Email Configuration (SMTP)
# For Gmail: Enable "Less secure app access" or use App Password
# Leave SMTP_USER and SMTP_PASS empty to disable email (users will be auto-verified)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Application
APP_NAME=CalPro - Calibration Management System
APP_URL=http://localhost:3000
SUPPORT_EMAIL=support@calpro.com
SMTP_FROM=noreply@calpro.com

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Default Admin Account (Created on first run)
DEFAULT_ADMIN_EMAIL=admin@calpro.com
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ADMIN_NAME=John Doe
